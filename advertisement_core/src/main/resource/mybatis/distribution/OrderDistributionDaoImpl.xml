<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="orderDistribution">

	<resultMap id="orderDistributionMap" type="OrderDistribution">
		<id property="orderDistributionId" column="order_distribution_id" jdbcType="NUMERIC" />
		<result property="username" column="username" jdbcType="VARCHAR" />
		<result property="orderCondition" column="order_condition" jdbcType="VARCHAR" />
		<result property="count" column="count" jdbcType="NUMERIC" />
		<result property="description" column="description" jdbcType="VARCHAR" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="Base_Column_List">
		order_distribution_id, username, order_condition, count,
		description, status, create_time,
		update_time
	</sql>

	<!-- 查询sql -->
	<select id="selectOrderDistributions" parameterType="OrderDistribution"
		resultMap="orderDistributionMap">
		select
		<include refid="Base_Column_List" />
		from
		tb_order_distribution
		<where>
			<trim suffixOverrides="and">
				<if test="orderDistributionId != null">
					order_distribution_id= #{orderDistributionId} and
				</if>
				<if test="username != null">
					username= #{username} and
				</if>
				<if test="orderCondition != null">
					order_condition= #{orderCondition} and
				</if>
				<if test="description != null">
					description= #{description} and
				</if>
				<if test="status != null">
					status= #{status} and
				</if>
			</trim>
			and status != -1
		</where>
		order by create_time desc
	</select>

	<select id="selectOrderDistributionByIds" parameterType="List"
		resultMap="orderDistributionMap">
		select
		<include refid="Base_Column_List" />
		from
		tb_order_distribution
		<where>
			order_distribution_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertOrderDistribution" parameterType="OrderDistribution">
		insert into
		tb_order_distribution(username, order_condition,
		count,description, status, create_time, update_time )
		values
		(#{username}, #{orderCondition}, #{count}, #{description},
		#{status}, sysdate(),
		sysdate() )
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="orderDistributionId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateOrderDistribution" parameterType="OrderDistribution">
		update tb_order_distribution
		<set>
			<trim suffixOverrides=",">
				<if test="username != null">
					username= #{username},
				</if>
				<if test="orderCondition != null">
					order_condition= #{orderCondition},
				</if>
				<if test="count != null">
					count= #{count},
				</if>
				<if test="description != null">
					description= #{description},
				</if>
				<if test="status != null">
					status= #{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			order_distribution_id=#{orderDistributionId}
		</where>
	</update>

	<delete id="deleteOrderDistribution" parameterType="long">
		delete from
		tb_order_distribution
		where
		order_distribution_id=#{orderDistributionId}
	</delete>

</mapper>