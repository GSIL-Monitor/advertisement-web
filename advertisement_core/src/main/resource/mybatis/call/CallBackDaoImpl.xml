<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="callBack">

	<resultMap id="callBackMap" type="CallBack">
		<id property="callBackId" column="call_back_id" jdbcType="NUMERIC" />
		<result property="workOrderId" column="work_order_id" jdbcType="NUMERIC" />
		<result property="staffId" column="staff_id" jdbcType="NUMERIC" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="callBackTime" column="call_back_time" jdbcType="TIMESTAMP" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<select id="selectCallBacks" parameterType="CallBack" resultMap="callBackMap">
		select
		* from
		tb_call_back b
		<where>
			<trim suffixOverrides="and">
				<if test="callBackId != null">
					call_back_id=#{callBackId} and
				</if>
				<if test="staffId != null">
					staff_id=#{staffId} and
				</if>
				<if test="workOrderId != null">
					work_order_id=#{workOrderId} and
				</if>
				<if test="status != null">
					status=#{status} and
				</if>
			</trim>
			and 1=1
		</where>
		order by create_time desc
	</select>

	<select id="selectCallBackByWorkOrderIds" parameterType="List"
		resultMap="callBackMap">
		select
		* from
		tb_call_back
		<where>
			work_order_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertCallBack" parameterType="CallBack">
		insert into
		tb_call_back(staff_id, work_order_id, status, call_back_time, create_time, update_time)
		values
		(#{staffId}, #{workOrderId},
		#{status}, #{callBackTime},
		sysdate(), sysdate())
	</insert>

	<update id="updateCallBack" parameterType="CallBack">
		update tb_call_back
		<set>
			<trim suffixOverrides=",">
				<if test="staffId != null">
					staff_id=#{staffId},
				</if>
				<if test="workOrderId != null">
					work_order_id=#{workOrderId},
				</if>
				<if test="status != null">
					status=#{status},
				</if>
				<if test="callBackTime != null">
					call_back_time=#{callBackTime},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			call_back_id=#{callBackId}
		</where>
	</update>

	<delete id="deleteCallBack" parameterType="CallBack">
		delete from tb_call_back
		<where>
			call_back_id=#{callBackId}
		</where>
	</delete>

</mapper>