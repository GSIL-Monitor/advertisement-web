<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="callRecord">

	<resultMap id="callRecordMap" type="CallRecord">
		<id property="callRecordId" column="call_record_id" jdbcType="NUMERIC" />
		<result property="projectId" column="project_id" jdbcType="NUMERIC" />
		<result property="workOrderId" column="work_order_id" jdbcType="NUMERIC" />
		<result property="staffId" column="staff_id" jdbcType="NUMERIC" />
		<result property="callType" column="call_type" jdbcType="VARCHAR" />
		<result property="callRecordUrl" column="call_record_url" jdbcType="VARCHAR" />
		<result property="startTime" column="start_time" jdbcType="TIMESTAMP" />
		<result property="endTime" column="end_time" jdbcType="TIMESTAMP" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<select id="selectCallRecord" parameterType="CallRecord"
		resultMap="callRecordMap">
		select
		* from
		tb_call_record r
		<where>
			<trim suffixOverrides="and">
				<if test="callRecordId != null">
					call_record_id=#{callRecordId} and
				</if>
				<if test="projectId != null">
					project_id=#{projectId} and
				</if>
				<if test="workOrderId != null">
					work_order_id=#{workOrderId} and
				</if>
				<if test="staffId != null">
					staff_id=#{staffId} and
				</if>
				<if test="staffIdList != null">
					staff_id in
					<foreach item="sid" collection="staffIdList" open="("
						separator="," close=")">
						#{sid}
					</foreach> and
				</if>
				<if test="callType != null">
					call_type=#{callType} and
				</if>
				<if test="startTime != null">
					start_time=#{startTime} and
				</if>
				<if test="endTime != null">
					end_time=#{endTime} and
				</if>
				<if test="status != null">
					status=#{status} and
				</if>
			</trim>
			and 1=1
		</where>
		order by create_time desc
	</select>

	<select id="selectCallRecordByWorkOrderIds" parameterType="List" resultMap="callRecordMap">
		select
		* from
		tb_call_record
		<where>
			work_order_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertCallRecord" parameterType="CallRecord">
		insert into
		tb_call_record(project_id, work_order_id, staff_id, call_record_url, call_type, start_time,
		end_time, status, create_time, update_time)
		values
		(#{projectId}, #{workOrderId},
		#{staffId}, #{callRecordUrl}, #{callType}, #{startTime}, #{endTime},
		#{status},
		sysdate(), sysdate())
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="callRecordId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateCallRecord" parameterType="CallRecord">
		update tb_call_record
		<set>
			<trim suffixOverrides=",">
				<if test="projectId != null">
					project_id=#{projectId},
				</if>
				<if test="workOrderId != null">
					work_order_id=#{workOrderId},
				</if>
				<if test="staffId != null">
					staff_id=#{staffId},
				</if>
				<if test="callRecordUrl != null">
					call_record_url=#{callRecordUrl},
				</if>
				<if test="callType != null">
					call_type=#{callType},
				</if>
				<if test="startTime != null">
					start_time=#{startTime},
				</if>
				<if test="endTime != null">
					end_time=#{endTime},
				</if>
				<if test="status != null">
					status=#{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			call_record_id=#{callRecordId}
		</where>
	</update>

	<delete id="deleteCallRecord" parameterType="CallRecord">
		delete from tb_call_record
		<where>
			call_record_id=#{callRecordId}
		</where>
	</delete>

</mapper>