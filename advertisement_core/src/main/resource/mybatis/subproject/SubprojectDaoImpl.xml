<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="subproject">

	<resultMap id="subprojectMap" type="Subproject">
		<id property="subprojectId" column="subproject_id" jdbcType="NUMERIC" />
		<result property="projectId" column="project_id" jdbcType="NUMERIC" />
		<result property="name" column="name" jdbcType="VARCHAR" />
		<result property="description" column="description" jdbcType="VARCHAR" />
		<result property="managerId" column="manager_id" jdbcType="NUMERIC" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 组员sql -->
	<select id="selectSubprojects" parameterType="Subproject" resultMap="subprojectMap">
		select
		* from
		tb_subproject s
		<where>
			<trim suffixOverrides="and">
				<if test="subprojectId != null">
					subproject_id=#{subprojectId} and
				</if>
				<if test="projectId != null">
					project_id=#{projectId} and
				</if>
				<if test="name != null">
					name like CONCAT(CONCAT('%', #{name}),'%') and
				</if>
				<if test="managerId != null">
					manager_id=#{managerId} and
				</if>
				<if test="status != null">
					status = #{status} and
				</if>
			</trim>
			and status != -1
		</where>
		order by create_time desc
	</select>

	<select id="selectSubprojectByIds" parameterType="List" resultMap="subprojectMap">
		select
		* from
		tb_subproject s
		<where>
			subproject_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertSubproject" parameterType="Subproject">
		insert into
		tb_subproject(project_id, name, description, manager_id, status, 
		         create_time, update_time)
		values
		(#{projectId}, #{name}, #{description}, #{managerId}, #{status},sysdate(), sysdate())
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="subprojectId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateSubproject" parameterType="Subproject">
		update tb_subproject
		<set>
			<trim suffixOverrides=",">
				<if test="projectId != null">
					project_id=#{projectId},
				</if>
				<if test="name != null">
					name=#{name},
				</if>
				<if test="description != null">
					description=#{description},
				</if>
				<if test="managerId != null">
					manager_id=#{managerId},
				</if>
				<if test="status != null">
					status=#{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			subproject_id=#{subprojectId}
		</where>
	</update>

	<delete id="deleteSubproject" parameterType="long">
		delete from tb_subproject
		where
		subproject_id=#{subprojectId}
	</delete>

</mapper>