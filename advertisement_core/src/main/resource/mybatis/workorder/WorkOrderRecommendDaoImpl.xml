<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="workOrderRecommend">

	<resultMap id="workOrderRecommendMap" type="WorkOrderRecommend">
		<id property="workOrderRecommendId" column="work_order_recommend_id" jdbcType="NUMERIC" />
		<result property="workOrderId" column="work_order_id" jdbcType="NUMERIC" />
		<result property="productId" column="product_id" jdbcType="NUMERIC" />
		<result property="successRate" column="success_rate" jdbcType="NUMERIC" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 查询sql -->
	<select id="selectWorkOrderRecommends" parameterType="WorkOrderRecommend"
		resultMap="workOrderRecommendMap">
		select
		* from
		tb_work_order_recommend
		<where>
			<trim suffixOverrides="and">
				<if test="workOrderId != null">
					work_order_id= #{workOrderId} and
				</if>
				<if test="productId != null">
					product_id= #{productId} and
				</if>
				<if test="status != null">
					status= #{status} and
				</if>
			</trim>
			and status != -1
		</where>
		order by success_rate desc, create_time desc
	</select>

	<select id="selectWorkOrderRecommendByWorkOrderIds" parameterType="List"
		resultMap="workOrderRecommendMap">
		select
		* from
		tb_work_order_recommend
		<where>
			work_order_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
		order by success_rate desc, create_time desc
	</select>

	<insert id="insertWorkOrderRecommend" parameterType="WorkOrderRecommend">
		insert into
		tb_work_order_recommend(work_order_id, product_id,
		success_rate, status, create_time, update_time )
		values
		(#{workOrderId}, #{productId}, #{successRate},
		#{status}, sysdate(), sysdate() )
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="workOrderRecommendId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateWorkOrderRecommend" parameterType="WorkOrderRecommend">
		update tb_work_order_recommend
		<set>
			<trim suffixOverrides=",">
				<if test="workOrderId != null">
					work_order_id= #{workOrderId},
				</if>
				<if test="productId != null">
					product_id= #{productId},
				</if>
				<if test="successRate != null">
					success_rate= #{successRate},
				</if>
				<if test="status != null">
					status= #{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			work_order_recommend_id=#{workOrderRecommendId}
		</where>
	</update>

	<delete id="deleteWorkOrderRecommend" parameterType="long">
		delete from tb_work_order_recommend
		where
		work_order_recommend_id=#{workOrderRecommendId}
	</delete>

</mapper>