<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="channel">

	<resultMap id="channelMap" type="Channel">
		<id property="channelId" column="channel_id" jdbcType="NUMERIC" />
		<result property="key" column="key" jdbcType="VARCHAR" />
		<result property="appId" column="app_id" jdbcType="NUMERIC" />
		<result property="type" column="type" jdbcType="VARCHAR" />
		<result property="name" column="name" jdbcType="VARCHAR" />
		<result property="description" column="description" jdbcType="VARCHAR" />
		<result property="activityDescription" column="activity_description" jdbcType="VARCHAR" />
		<result property="mark" column="mark" jdbcType="VARCHAR" />
		<result property="bonus" column="bonus" jdbcType="NUMERIC" />
		<result property="unitPrice" column="unit_price" jdbcType="NUMERIC" />
		<result property="showType" column="show_type" jdbcType="NUMERIC" />
		<result property="showFields" column="show_fields" jdbcType="VARCHAR" />
		<result property="notifyHandler" column="notify_handler"
			jdbcType="VARCHAR" />
		<result property="encryptKey" column="encrypt_key" jdbcType="VARCHAR" />
		<result property="imageUrl" column="image_url" jdbcType="NUMERIC" />
		<result property="androidDownloadUrl" column="android_download_url" jdbcType="VARCHAR" />
		<result property="iosDownloadUrl" column="ios_download_url" jdbcType="VARCHAR" />
		<result property="deliverOrderUrl" column="deliver_order_url" jdbcType="VARCHAR" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 简历sql -->
	<select id="selectChannel" parameterType="Channel" resultMap="channelMap">
		select
		* from
		tb_channel t
		<where>
			<trim suffixOverrides="and">
				<if test="channelId != null">
					channel_id=#{channelId} and
				</if>
				<if test="activityId != null">
					activity_id=#{activityId} and
				</if>
				<if test="name != null">
					name like CONCAT(CONCAT('%', #{name}),'%') and
				</if>
				<if test="key != null">
					`key`=#{key} and
				</if>
				<if test="appId != null">
					app_id=#{appId} and
				</if>
				<if test="androidDownloadUrl != null">
					android_download_url=#{androidDownloadUrl} and
				</if>
				<if test="iosDownloadUrl != null">
					ios_download_url=#{iosDownloadUrl} and
				</if>
				<if test="status != null">
					status = #{status} and
				</if>
			</trim>
			and status != -1
		</where>
		order by create_time desc
	</select>

	<select id="selectChannelByKeys" parameterType="List" resultMap="channelMap">
		select
		* from
		tb_channel t
		<where>
			`key` in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<select id="selectChannelByIds" parameterType="List" resultMap="channelMap">
		select
		* from
		tb_channel t
		<where>
			channel_id in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertChannel" parameterType="Channel">
		insert into
		tb_channel(`key`, app_id, type, name, description, activity_description,
		mark, bonus,
		unit_price, show_type, show_fields, notify_handler,
		encrypt_key, image_url, ios_download_url, android_download_url,
		status, create_time, update_time)
		values
		(#{key}, #{appId}, #{type}, #{name},
		#{description}, #{activityDescription}, #{mark},
		#{bonus},
		#{unitPrice}, #{showType}, #{showFields},
		#{notifyHandler},
		#{encryptKey}, #{imageUrl}, #{iosDownloadUrl}, #{androidDownloadUrl}, #{status},
		sysdate(), sysdate())
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="channelId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateChannel" parameterType="Channel">
		update tb_channel
		<set>
			<trim suffixOverrides=",">
				<if test="key != null">
					`key`=#{key},
				</if>
				<if test="type != null">
					type=#{type},
				</if>
				<if test="name != null">
					name=#{name},
				</if>
				<if test="description != null">
					description=#{description},
				</if>
				<if test="activityDescription != null">
					activity_description=#{activityDescription},
				</if>
				<if test="mark != null">
					mark=#{mark},
				</if>
				<if test="appId != null">
					app_id=#{appId},
				</if>
				<if test="bonus != null">
					bonus=#{bonus},
				</if>
				<if test="unitPrice != null">
					unit_price=#{unitPrice},
				</if>
				<if test="showFields != null">
					show_fields=#{showFields},
				</if>
				<if test="showType != null">
					show_type=#{showType},
				</if>
				<if test="notifyHandler != null">
					notify_handler=#{notifyHandler},
				</if>
				<if test="encryptKey != null">
					encrypt_key=#{encryptKey},
				</if>
				<if test="imageUrl != null">
					image_url=#{imageUrl},
				</if>
				<if test="androidDownloadUrl != null">
					android_download_url=#{androidDownloadUrl},
				</if>
				<if test="iosDownloadUrl != null">
					ios_download_url=#{iosDownloadUrl},
				</if>
				<if test="status != null">
					status=#{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			channel_id=#{channelId}
		</where>
	</update>

	<delete id="deleteChannel" parameterType="long">
		delete from tb_channel
		where
		channel_id=#{channelId}
	</delete>

</mapper>