<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="supplier">

	<resultMap id="supplierMap" type="Supplier">
		<id property="supplierId" column="supplier_id" jdbcType="NUMERIC" />
		<result property="projectId" column="project_id" jdbcType="NUMERIC" />
		<result property="key" column="key" jdbcType="VARCHAR" />
		<result property="name" column="name" jdbcType="VARCHAR" />
		<result property="encryptKey" column="encrypt_key" jdbcType="VARCHAR" />
		<result property="description" column="description" jdbcType="VARCHAR" />
		<result property="type" column="type" jdbcType="NUMERIC" />
		<result property="status" column="status" jdbcType="NUMERIC" />
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- sql -->
	<select id="selectSuppliers" parameterType="Supplier" resultMap="supplierMap">
		select
		* from
		tb_supplier
		<where>
			<trim suffixOverrides="and">
				<if test="supplierId != null">
					supplier_id=#{supplierId} and
				</if>
				<if test="projectId != null">
					project_id=#{projectId} and
				</if>
				<if test="key != null">
					`key`=#{key} and
				</if>
				<if test="name != null">
					name=#{name} and
				</if>
				<if test="description != null">
					description=#{description} and
				</if>
				<if test="encryptKey != null">
					encrypt_key=#{encryptKey} and
				</if>
				<if test="type != null">
					type=#{type} and
				</if>
				<if test="status != null">
					status = #{status} and
				</if>
			</trim>
			and status != -1
		</where>
		order by create_time desc
	</select>

	<select id="selectSupplierByKeys" parameterType="List" resultMap="supplierMap">
		select
		* from
		tb_supplier
		<where>
			`key` in
			<foreach item="id" collection="list" open="(" separator=","
				close=")">
				#{id}
			</foreach>
		</where>
	</select>

	<insert id="insertSupplier" parameterType="Supplier">
		insert into
		tb_supplier(project_id, key, name, description, encrypt_key, type, status, 
		         create_time, update_time)
		values
		(#{projectId}, #{key}, #{name}, #{description}, #{encryptKey},
		 #{type}, #{status},sysdate(), sysdate())
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="supplierId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateSupplier" parameterType="Supplier">
		update tb_supplier
		<set>
			<trim suffixOverrides=",">
				<if test="projectId != null">
					project_id=#{projectId},
				</if>
				<if test="key != null">
					key=#{key},
				</if>
				<if test="name != null">
					name=#{name},
				</if>
				<if test="description != null">
					description=#{description},
				</if>
				<if test="encryptKey != null">
					encrypt_key=#{encryptKey},
				</if>
				<if test="type != null">
					type=#{type},
				</if>
				<if test="status != null">
					status=#{status},
				</if>
				update_time=sysdate(),
			</trim>
		</set>
		<where>
			supplier_id=#{supplierId}
		</where>
	</update>

	<delete id="deleteSupplier" parameterType="long">
		delete from tb_supplier
		where
		supplier_id=#{supplierId}
	</delete>

</mapper>